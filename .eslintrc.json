{
  "extends": ["next/core-web-vitals",  "prettier", "plugin:tailwindcss/recommended"],
  "plugins": ["prettier", "tailwindcss"],
  "rules": {
    "no-console": "warn",
    "no-unused-vars":  ["warn", { "argsIgnorePattern": "^_" }]
  },
  "settings": {
    "tailwindcss": {
      "callees": ["cn", "cva"],
      "config": "./tailwind.config.ts",
      "classRegex": "^(class(Name)?|tw)$"
    }
  }
}
